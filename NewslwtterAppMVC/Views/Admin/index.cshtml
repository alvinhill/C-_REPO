 

@* @using NewslwtterAppMVC.Models
    @model List<SignupVm>
*@



<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign Ups</h5>

        </div>
        <div class="card-body">

            @foreach (var LoopData in Model)
            {
                using (Html.BeginForm("Unsubscribe", "Admin", FormMethod.Post))
                {
                    <input type="hidden" name="Id" value="@LoopData.Id" />
                    <div class="row">
                        <div class="col">
                            @LoopData.FirstName
                        </div>
                        <div class="col">
                            @LoopData.LastName

                        </div>
                        <div class="col">
                            @LoopData.EmailAddress

                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-danger btn-block">
                                Unsubscribe
                            </button>"
                        </div>

                    </div>



                }



            }

        </div>
    </div>
</div>